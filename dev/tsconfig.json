{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["../src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
